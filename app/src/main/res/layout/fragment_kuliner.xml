<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Kuliner">

    <ImageView
        android:layout_width="385dp"
        android:layout_height="217dp"
        android:layout_gravity="center"
        android:src="@drawable/kuliner" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:text="APA YANG DIPELAJARI DI KULINER"
        android:textColor="#03A9F4"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="left|center"
        android:textSize="15dp"
        android:text="-Keamanan Pangan"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="left|center"
        android:textSize="15dp"
        android:text="-Pengetahuan Bahan pangan "
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="left|center"
        android:textSize="15dp"
        android:text="-Boga Dasar"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="left|center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="-Ilmu Gizi"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="left|center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="-Tata Hidung" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="left|center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="-PPM"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="left|center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="-Produk Cake dan Kue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="left|center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="-Produk Pastry dan Bakery"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="left|center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="-Produk Kreatif dan Kewirausahaan"/>


</LinearLayout>